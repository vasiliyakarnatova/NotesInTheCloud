{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "index.ts",
    "src/**/*",
    "src/db/db-setup.ts",
    "tsconfig.node.json",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}