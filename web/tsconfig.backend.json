{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src/backend",
    "outDir": "./dist/backend",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"]
    }
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend"]
}
