{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./backend",
    "outDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/*"]
    }
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "dist", "frontend"]
}
